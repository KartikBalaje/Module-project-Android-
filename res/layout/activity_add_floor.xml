<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="FLOOR"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/collegeName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/buildingname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/fNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/buildingname"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Floor Number"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/norooms"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/bid"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:hint="No of Rooms"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/totalLabs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/norooms"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:hint="No of Labs"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/otherDetails"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/totalrooms"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Other Details"
                    android:textColor="@color/black" />


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/mybutton"
            android:backgroundTint="#38C6A3"
            android:text="ADD"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>