<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/t1"
            android:textAlignment="center"
            android:text="TD2S199"
            android:layout_marginTop="50dp"
            />

        <ImageView
            android:layout_below="@+id/t1"
            android:layout_width="match_parent"
            android:id="@+id/logo"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/td2s199"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/logo"
            android:layout_height="match_parent"
            android:background="@drawable/bottomtab"
            android:paddingTop="40dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/logo"
            android:text="Features:"
            android:textColor="@color/black"
            android:id="@+id/f1"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f1"
            android:id="@+id/f2"
            android:text="It has objective lens (4x,10x,40x or 400x)"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f2"
            android:id="@+id/f3"
            android:text="Date of purchase :   29-12-2021"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f3"
            android:id="@+id/f4"
            android:text="Services Undergone :"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f4"
            android:id="@+id/f7"
            android:text="Total services :   2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f7"
            android:id="@+id/f8"
            android:textColor="@color/black"
            android:text="Price :  2500"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f8"
            android:id="@+id/f9"
            android:textColor="@color/black"
            android:text="Working Condition : Perfect"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f9"
            android:id="@+id/f10"
            android:textColor="@color/black"
            android:text="End of warranty : 29-12-2023"
            android:textSize="20dp"
            />

        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>