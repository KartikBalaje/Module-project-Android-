<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    android:layout_gravity="center"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="MissingDefaultResource"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bgcard"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_weight="0.9">
                <TextView
                    android:id="@+id/eqname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Microscope"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/backgroundfields"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Id : TD0G121"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notworking"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/backgroundfields"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Not Working"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/biolab"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/backgroundfields"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Bio Lab"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/backgroundfields"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Date : 17-07-2023"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tcname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/backgroundfields"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Technician : Ramesh"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/backgroundfields"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Job Id : 16235"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imbtn"
                    android:layout_marginTop="20dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dropdwon" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
