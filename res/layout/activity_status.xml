<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="250dp"
            android:id="@+id/epimage"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/epimage"
            />

        <TextView
            android:id="@+id/helptv"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="90dp"
            android:text="Help"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/infooutline"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="380dp"
            />
        <ImageButton
            android:layout_below="@id/info"
            android:id="@+id/help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/headsetmic"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="380dp"
            />
        <TextView
            android:layout_below="@+id/epimage"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/t1"
            android:textAlignment="center"
            android:text="all about you"/>

        <ImageView
            android:layout_below="@+id/t1"
            android:layout_width="50dp"
            android:id="@+id/settingsimage"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/settings"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="90dp"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/t2"
            android:textAlignment="center"
            android:text="Your equipment is under
            maintenance."/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:paddingTop="50dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/t3"
                android:textAlignment="center"
                android:text="In Process...."/>

            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:paddingTop="50dp"
                android:text="Delivery on\nSat , 15 Jul"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/settingsimage"
            android:layout_width="50dp"
            android:id="@+id/inprogress"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/inprogress"
            />

        <ImageView
            android:layout_below="@+id/inprogress"
            android:layout_width="50dp"
            android:id="@+id/deliveryon"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/delivery"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="530dp"
            android:backgroundTint="#38C6A3"

            app:cardCornerRadius="20dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cancel" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cl"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Cancel"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/asper"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="as per resuest"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_above="@id/ratingBar1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"

            android:textSize="20dp"
            android:id="@+id/t10"
            android:textColor="@color/black"
            android:background="#38C6A3"
            android:text="Ratings"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#38C6A3"
            android:id="@+id/ratingBar1">




            <RatingBar
                android:layout_alignParentBottom="true"
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"

                android:rating="0.01"

                android:progressBackgroundTint="@color/white"

                />

            <TextView
                android:id="@+id/t9"
                android:layout_width="170dp"
                android:layout_height="50dp"

                android:background="@drawable/mybutton"
                android:backgroundTint="#000000"
                android:paddingTop="15dp"
                android:text="Feed Back"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>